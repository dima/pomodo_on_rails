<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Notes</th>
    <th>Completed</th>
    <th>Billed percentage</th>
  </tr>

<% for task in @tasks %>
  <tr>
    <td><%=h task.name %></td>
    <td><%=h task.notes %></td>
    <td><%=h task.completed %></td>
    <td><%=h task.billed_percentage %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

